<div class="accordion {{ modifier }} {{ class }} js-accordion-group">
    {% for index, accordionItem in accordionItems %}
    <div class="accordion__item js-accordion" id="{{ id }}-{{ index }}">
        <a href="#{{ id }}-{{ index }}" class="accordion__header js-accordion-control">
            <div class="accordion__title">
                <div class="accordion__order-date">
                    {{ accordionItem.date }}
                    <span class="accordion__order-year">{{ accordionItem.year }}</span>
                </div>
                <div class="accordion__order-code">{{ accordionItem.orderCode }}</div>
                <div class="accordion__order-content">{{ accordionItem.orderContent }}</div>
                <div class="accordion__order-sum">{{ accordionItem.orderSum }}</div>
            </div>
            {% include '@icon' with { modifier: 'chevron', class: 'accordion__icon'} %}
        </a>
        <div class="accordion__content js-accordion-content">
            <div class="accordion__inner">
                {{ accordionItem.content }}
            </div>
        </div>
    </div>
    {% endfor %}
</div>
