{% include '@header' with header %}

<section class="section ">
    <div class="hero hero--top-content">
		<figure class="hero__bg">
			<picture class="hero__picture">
				<img src="{{ hero.bg }}" class="hero__img lazyautosizes lazyloaded">
			</picture>
		</figure>
		<div class="hero__container h-container">
			<div class="hero__inner">
				<div class="hero__content" style="width:100%;">
					<h1 class="hero__title">
						{{ hero.title }}
					</h1>                
					<p class="hero__description">
						{{ hero.description }}
					</p>                                                                    
					<a href="{{ hero.ctaButton2.link }}" class="button button--block-xs hero__button h-scrollto">
						<span class="button__inner">{{ hero.ctaButton2.text }}</span>
							<i class="button__bubble"></i>
					</a>
					     
				</div>
			</div>
		</div>
    </div>
    <div class="features {{ modifier }}">
		<div class="h-container">
			<div class="features__inner">
				{% if features %}
				<ul class="features__list">
					{% for feature in features %}
					<li class="features__item">
						<img class="icon features__icon features__icon__new" src="{{ feature.icon }}">
						<div class="features__text text">
							<h4 class="features__title">{{ feature.title }}</h4>
							<p class="features__description">{{ feature.text }}</p>
						</div>
					</li>
					{% endfor %}
				</ul>
				{% endif %}
			</div>
		</div>
	</div>
  
</section>


<section class="section">
	<div class="h-container">
		<div class="section__head">
			<div class="section__grid align_center">
				<div class="section__primary_new">
					<h2 class="section__title">
						{{ productTitle }}
					</h2>
				</div>
				<div class="section__secondary section__secondary_new">
					<div class="section__description">
						{{ productContent }}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

{% if products %}
<section class="section section--products">
	<div class="h-container">
		<div class="grid js-product-grid">
			{% for product in products %}
				<div class="grid__col--sm-6 grid__col--md-4 grid__col--vertical-gutter-36"> 
					<a href="{{ product.product_link }}" class="product product_new">
						<figure class="product__image"> 
							<img src="{{ product.product_image }}" class="product__image-img lazyautosizes lazyloaded">
						</figure>
						<div class="product__content">
							<h2 class="product__title">
								{{ product.product_title }}
							</h2>
							<div class="product_line"></div>
							<p class="product__description">
								{{ product.product_desc }}
							</p>
						</div>
					</a>
				</div>
			{% endfor %}	
		</div>	
	</div>
</section>
{% endif %}


<section class="section">
	<div class="h-container">
		<div class="section__head section__head_pad_top">
			<div class="section__grid align_center">
				<div class="section__secondary section__secondary_partners">
					<div class="section__description ">
						<h2 class="section__title">
							{{ partners_title }}
						</h2>
						{{ partners_content }}
					</div>
				</div>
				<div class="section__primary_new section__primary_partners">
					<img src="{{ partners_image }}" class="lazyautosizes lazyloaded">
				</div>
				
			</div>
		</div>
	</div>
</section>


<section class="section section--blog blog_new">
	<div class="h-container">
		<div class="grid article-grid article-grid--blog ">
			<div class="grid__col--sm-12 blog_new_title"> 
				<h2>{{ news_title }}</h2>
			</div>
			{% if news %}
				{% for new in news %}
					<div class="js-article js-search-sortable grid__col--sm-4 article-grid__column"> 
						<a href="{{ new.news_link }}" class="article article-grid--blog">
							<div class="article__figure"> 
								<img src="{{ new.news_image }}">
							</div>
							<div class="article__content">
								<h2 class="article__title">
									{{ new.news_title_in }}
								</h2> 
								<span class="article__date">
									{{ new.news_sub_title }}
								</span>
								<p class="article__description">
									{{ new.news_description }}
								</p>
							</div> 
						</a>
					</div>
				{% endfor %}	
			{% endif %}
		</div>
	</div>	
</section>


